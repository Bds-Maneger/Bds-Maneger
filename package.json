{
    "name": "bds-manege",
    "version": "1.2.0",
    "description": "Minimal maneger for Minecraf Bedrock Server",
    "main": "index.js",
    "private": false,
    "scripts": {
        "start": "electron --no-sandbox --trace-warnings .",
        "test": "npm i electron@11.3.0 --no-save && node ./electron_test.js",
        "eslint": "eslint .",
        "eslint:fix": "eslint . --fix",
        "pack": "npm run dir:pack && electron-builder --x64",
        "pack:arm64": "npm run dir:packarm64 && electron-builder --arm64",
        "dir:pack": "electron-builder --dir --x64",
        "dir:packarm64": "electron-builder --dir --arm64",
        "postinstall": "electron-builder install-app-deps"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Bds-Maneger/Bds-Maneger.git"
    },
    "keywords": [
        "minecraft",
        "bds",
        "bds-server",
        "Windows",
        "linux",
        "macos"
    ],
    "build": {
        "appId": "com.sirherobrine23.bds_maneger",
        "asar": false,
        "asarUnpack": true,
        "nsis": {
            "oneClick": "false",
            "artifactName": "${productName}-Setup-${version}-${arch}.${ext}",
            "allowToChangeInstallationDirectory": "true",
            "installerIcon": "./bds_pages/assents/mcpe.ico"
        },
        "portable": {
            "artifactName": "${productName}-Portable-${version}-${arch}.${ext}"
        },
        "deb": {
            "depends": [
                "gconf2",
                "gconf-service",
                "libnotify4",
                "libappindicator1",
                "libxtst6",
                "libnss3",
                "curl"
            ],
            "packageCategory": "The bds Maneger"
        },
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "icon": "./bds_pages/assents/mcpe.ico"
        },
        "linux": {
            "artifactName": "${productName}-Setup-${version}-${arch}.${ext}",
            "category": "The Bds Maneger",
            "target": [
                "deb",
                "AppImage"
            ],
            "icon": "./bds_pages/assents/mcpe256x256.png"
        }
    },
    "author": "Matheus Sampaio Queiroga (Sirherobrine23) <srherobrine20@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://Bds-Maneger/Bds-Maneger/issues"
    },
    "homepage": "https://Bds-Maneger/Bds-Maneger#readme",
    "dependencies": {
        "@electron/remote": "^1.0.4",
        "@the-bds-maneger/bds_maneger_api": "^1.3.0",
        "command-exists": "^1.2.9",
        "eslint": "^7.19.0"
    },
    "devDependencies": {
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "electron": "^12.0.0",
        "electron-builder": "^22.9.1",
        "electron-is": "^3.0.0",
        "esm": "^3.2.25",
        "mocha": "^8.2.1",
        "spectron": "^13.0.0"
    }
}
