{
    "name": "bds-manege",
    "version": "1.2.5",
    "description": "The Bds Maneger, control your server with Electron",
    "main": "index.js",
    "private": false,
    "scripts": {
        "start": "electron --no-sandbox --trace-warnings .",
        "test": "npm run eslint",
        "eslint": "eslint .",
        "eslint:fix": "eslint . --fix",
        "pack": "npm run dir:pack && electron-builder --x64",
        "pack:arm64": "npm run dir:packarm64 && electron-builder --arm64",
        "dir:pack": "electron-builder --dir --x64",
        "dir:packarm64": "electron-builder --dir --arm64"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/The-Bds-Maneger/Bds-Maneger.git"
    },
    "keywords": [
        "minecraft",
        "bds",
        "bds-server",
        "Windows",
        "linux",
        "macos"
    ],
    "author": "Matheus Sampaio Queiroga (Sirherobrine23) <srherobrine20@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/The-Bds-Maneger/issues"
    },
    "homepage": "https://github.com/The-Bds-Maneger#readme",
    "dependencies": {
        "@electron/remote": "^1.0.4",
        "@the-bds-maneger/core": "^1.8.7",
        "command-exists": "^1.2.9"
    },
    "devDependencies": {
        "electron": "^12.0.0",
        "electron-builder": "^22.9.1",
        "electron-is": "^3.0.0",
        "eslint": "^7.24.0",
        "xmldom": ">=0.5.0"
    },
    "build": {
        "appId": "com.sirherobrine23.bds_maneger",
        "asar": false,
        "asarUnpack": true,
        "nsis": {
            "oneClick": "false",
            "artifactName": "${productName}-Setup-${version}-${arch}.${ext}",
            "allowToChangeInstallationDirectory": "true",
            "installerIcon": "./bds_pages/assents/mcpe.ico"
        },
        "portable": {
            "artifactName": "${productName}-Portable-${version}-${arch}.${ext}"
        },
        "deb": {
            "depends": [
                "gconf2",
                "gconf-service",
                "libnotify4",
                "libappindicator1",
                "libxtst6",
                "libnss3",
                "curl"
            ],
            "packageCategory": "The bds Maneger"
        },
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "icon": "./bds_pages/assents/mcpe.ico"
        },
        "linux": {
            "artifactName": "${productName}-Setup-${version}-${arch}.${ext}",
            "category": "The Bds Maneger",
            "target": [
                "deb",
                "AppImage"
            ],
            "icon": "./bds_pages/assents/mcpe256x256.png"
        }
    }
}
